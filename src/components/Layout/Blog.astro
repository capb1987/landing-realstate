---
import BlogCard from "@/components/Shared/BlogCard.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

const blog: CollectionEntry<"blog">[] = await getCollection("blog");
---

<section
  class="seccion min-h-dvh bg-linear-to-br from-white to-slate-100 p-4 md:p-8 items-center"
>
  <h1
    id="blog"
    class="scroll-mt-20 md:scroll-mt-24 text-center text-2xl md:p-0 md:text-4xl font-bold uppercase"
  >
    Blog
  </h1>
  <div class="divider mx-auto md:max-w-xl"></div>
  <div
    class="grid gap-4 md:gap-8 md:grid-cols-2 lg:grid-cols-3 container mx-auto max-w-6xl min-h-[60dvh] items-center"
  >
    {blog.map((post) => <BlogCard post={post} />)}
  </div>
</section>
