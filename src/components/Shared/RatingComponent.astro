---
export interface Props {
  id: number;
}
const { id } = Astro.props;
---

<div class="rating justify-center">
  <div class="mask mask-star bg-orange-400" aria-label="1 star"></div>
  <div class="mask mask-star bg-orange-400" aria-label="2 star"></div>
  <div class="mask mask-star bg-orange-400" aria-label="3 star"></div>
  <div
    class="mask mask-star bg-orange-400"
    aria-label="4 star"
    aria-current={id === 2 ? "true" : id === 1 ? "true" : "false"}
  >
  </div>
  <div
    class="mask mask-star bg-orange-400"
    aria-label="5 star"
    aria-current={id === 3 ? "true" : "false"}
  >
  </div>
</div>
